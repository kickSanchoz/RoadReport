    </style>

    <style name="TextAppearanceError" parent="TextAppearance.S12">
        <item name="android:textColor">@color/red1</item>
    </style>

    <!--  Кнопки   -->

    <style name="Button.Main" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/DefaultShapeAppearance</item>
        <item name="android:textColor">@drawable/selector_button_main_text</item>
        <item name="android:textAppearance">@style/TextAppearance.Medium.S16</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundTint">@drawable/selector_button_main</item>
    </style>

    <style name="Button.Main.Primary">
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="Button.Image" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@color/blue17</item>
        <item name="shapeAppearanceOverlay">@style/DefaultShapeAppearance.Circle</item>
        <item name="rippleColor">@color/grey3</item>
    </style>

    <!--  Bottom Sheet   -->
    <style name="BottomSheetTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="DialogFragmentTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="GalleryDialogTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/enter_slide_up</item>
        <item name="android:windowExitAnimation">@anim/exit_slide_down</item>
    </style>

    <style name="DialogAnimationExit">
        <item name="android:windowExitAnimation">@anim/exit_slide_down</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/TextAppearance</item>
    </style>

    <style name="TextView.Borders">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- TextInputLayout -->
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/grey5</item>
        <item name="boxStrokeColor">@color/grey5</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="passwordToggleTint">@color/black</item>
        <item name="endIconTint">@color/black</item>
        <item name="helperTextTextAppearance">@style/TextAppearance.S12</item>
        <item name="errorTextAppearance">@style/TextAppearanceError</item>
        <item name="errorTextColor">@color/red1</item>
    </style>

</resources>