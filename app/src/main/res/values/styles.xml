    <style name="TextAppearance.Bold">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontFamily">@font/open_sans_bold</item>
    </style>

    <style name="TextAppearance.Bold.S48">
        <item name="android:textSize">@dimen/s48</item>
    </style>

